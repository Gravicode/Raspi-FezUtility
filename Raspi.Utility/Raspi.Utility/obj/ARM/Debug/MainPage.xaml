<Page
    x:Class="Raspi.Utility.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Raspi.Utility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Orientation="Horizontal" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <StackPanel Width="75">
                <TextBlock Text="Leds: " />
                <TextBlock Text="Potensio: " />
                <TextBlock Text="Servo: " />
                <TextBlock Text="PIR: " />
                <TextBlock Text="Sound: " />
                <TextBlock Text="Dim Led: " />
            </StackPanel>
            <StackPanel>
                <TextBlock x:ConnectionId='1' Name="TxtLed" />
                <TextBlock x:ConnectionId='2' Name="TxtPotensio" />
                <TextBlock x:ConnectionId='3' Name="TxtServo" />
                <TextBlock x:ConnectionId='4' Name="TxtPir" />
                <TextBlock x:ConnectionId='5' Name="TxtSound" />
                <TextBlock x:ConnectionId='6' Name="TxtDimLed" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

